<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/wednesdaymealbar"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/wednesdayBreakfast"
            style="@style/mealTitleTuesday"
            android:layout_width="wrap_content"
            android:layout_weight="0.3" />

        <TextView
            android:id="@+id/wednesdayLunch"
            style="@style/mealTitleTuesday"
            android:layout_weight="0.3" />

        <TextView
            android:id="@+id/wednesdayDinner"
            style="@style/mealTitleTuesday"
            android:layout_weight="0.3" />
    </LinearLayout>
    <GridView 
        android:id="@+id/wednesdayGrid"
        android:layout_toRightOf="@id/wednesdaymealbar"
        android:layout_toEndOf="@id/wednesdaymealbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:numColumns="2">
    </GridView>
    <TextView
        android:id="@+id/wednesdayItems"
        android:layout_toRightOf="@id/wednesdaymealbar"
        android:layout_toEndOf="@id/wednesdaymealbar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </TextView>
    <TextView 
        android:id="@+id/wednesdayViewAll"
        android:layout_below="@id/wednesdayGrid"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />
</RelativeLayout>